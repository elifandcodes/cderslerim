#include <stdio.h>
#include <stdlib.h>


/*
A program that checks whether the number entered by the user is odd or even.
*/

int main() {
	int number;
	printf("Please enter a number: \n");
	scanf_s("%d", &number);

	if (number % 2 == 0) {
		printf("The number %d is even.\n", number);
	}
	else {
		printf("The number %d is odd.\n", number);
	}

	return 0;
}
